<h1>Listing pictures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>User</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.name %></td>
        <td><%= picture.url %></td>
        <td><%= picture.user_id %></td>
        <td><%= picture.rating %></td>
        <td><%= link_to 'Show', category_picture_path(@category, picture) %></td>
        <td><%= link_to 'Edit', edit_category_picture_path(@category, picture) %></td>
        <td><%= link_to 'Destroy', category_picture_path(@category, picture), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_category_picture_path(@category) %>
