<h1>Upload a picture</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@picture) do |f| %>

      <%= f.label :name, 'Name your photo:' %>
      <%= f.text_field :name %>

      <%= f.label :url, 'Url (from imgur)' %>
      <%= f.text_field :url %>

      <%= f.submit "Upload Photo", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>